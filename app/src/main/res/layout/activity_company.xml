<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.CompanyActivity">

    <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>


    <include
      android:id="@id/bottom_nav"
      layout="@layout/bottom_navigation"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:backgroundTint="@color/primary_background"
      android:src="@android:drawable/ic_input_add"
      android:tint="@color/text_main_light"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.975"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.849"/>

    <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="0dp"
      android:layout_height="496dp"
      android:layout_margin="0dp"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
      <TextView
        android:id="@+id/company_score_text"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/company_score"
        android:textColor="@color/text_secondary_dark"/>
      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_horizontal">

        <az.plainpie.PieView
          android:id="@+id/company_pie"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_gravity="center"
          app:inner_text_visibility="true"
          app:percentage="65"
          app:percentage_size="50"/>

      </android.support.v7.widget.CardView>
      <TextView
        android:id="@+id/indicator_text"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/indicators"
        android:textColor="@color/text_secondary_dark"/>
      <TextView
        android:id="@+id/health_text"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/health"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/text_secondary_dark"/>
      <ProgressBar
        android:id="@+id/health_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:progress="30"
        android:progressBackgroundTint="@color/shaded"
        android:progressTint="@color/bad"/>
      <TextView
        android:id="@+id/performance_text"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/performance"
        android:textColor="@color/text_secondary_dark"/>
      <ProgressBar
        android:id="@+id/strength_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:progress="90"
        android:progressBackgroundTint="@color/shaded"
        android:progressTint="@color/good"/>

      <TextView
        android:id="@+id/risk_text"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/risk"
        android:textColor="@color/text_secondary_dark"/>

      <ProgressBar
        android:id="@+id/risk_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:progress="60"
        android:progressBackgroundTint="@color/shaded"
        android:progressTint="@color/average"/>
      <TextView
        android:id="@+id/strength_text"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/strength"
        android:textColor="@color/text_secondary_dark"/>
      <ProgressBar
        android:id="@+id/return_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:progress="80"
        android:progressBackgroundTint="@color/shaded"
        android:progressTint="@color/good"/>
      <TextView
        android:id="@+id/return_text"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/returns"
        android:textColor="@color/text_secondary_dark"/>
      <ProgressBar
        android:id="@+id/performance_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:progress="50"

        android:progressBackgroundTint="@color/shaded"
        android:progressTint="@color/average"/>
    </LinearLayout>

  </android.support.constraint.ConstraintLayout>
</layout>